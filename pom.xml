            <systemPath>${project.basedir}/lib/Softcrylic-Library-1.0.0_obs.jar</systemPath>
        </dependency>  

<dependency>
            <groupId>waat</groupId>
            <artifactId>WAAT</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/WAAT_v1.3.jar</systemPath>
        </dependency>  
  </dependencies>
<build>
