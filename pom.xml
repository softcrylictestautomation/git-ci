     <type>jar</type>
     <scope>compile</scope>
    </dependency>
    <dependency>
     <groupId>javax.jms</groupId>
     <artifactId>jms-api</artifactId>
     <version>1.1-rev-1</version>
     <type>jar</type>
     <scope>compile</scope>
    </dependency>
<dependency>
            <groupId>softcrylic</groupId>
            <artifactId>softcrylic-libray</artifactId>
